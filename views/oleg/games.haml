%head
  %title Студенты
  %link(href="/css/style.css" rel="stylesheet")
  %link(href="/css/bootstrap.min.scss" rel="stylesheet")
  %link(rel="stylesheet" href="/font-awesome-4.7.0/css/font-awesome.css")
  %link(rel="icon" href="/images/logo.png" type="images/png")
  %meta(name="viewport" content="width=device-width, initial-scale=1")
%body
  %h3= @student.first_name + ' ' + @student.last_name
  %ul
    - @o_gs.each do |game|
      %li= game.name + ' - ' + game.id.to_s + ' - ' + game.author.first_name
      - game.categories.each do |cat|
        %span= cat.name
      - game.game_images.each do |imge|
        - if imge.main
          %img(src="#{imge.img_url}")
