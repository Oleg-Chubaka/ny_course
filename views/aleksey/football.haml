%head
  %title Студенты
  %link(href="/css/aleksey_style.css" rel="stylesheet")
  %link(rel="stylesheet" href="/font-awesome-4.7.0/css/font-awesome.css")
  %link(rel="icon" href="/images/logo.png" type="images/png")
  %meta(name="viewport" content="width=device-width, initial-scale=1")
%div
  %a(href="/")
    %h2= 'Back to the list of students'
%body
  - @teams.each do |team|
    %br
    %h3= "Команда \"#{team.name}\""
    %p
      %img(scr="#{team.team_image.img_url}")
    %br
    - team.best_players.each do |player|
      %p
        %i= player.first_name + ' ' + player.last_name
    %br
    %h3= 'Краткие свединия: '
    %ul
      %li= 'Страна: '
      %b= team.country
      %li= 'Дата открытия: '
      %b= team.foundation_date
      %li= 'Тренер: '
      %b= team.trener
      %li= 'Рейтинг: '
      %b= team.rating
      %li= 'Общее сведение: '
      %b= team.notes